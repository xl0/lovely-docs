{
	"name": "lovely-docs-mcp",
	"version": "0.0.3",
	"description": "MCP server for lovely-docs",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/xl0/lovely-docs.git"
	},
    "homepage": "https://lovely-docs.github.io",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./doc-cache": {
			"types": "./dist/lib/doc-cache.d.ts",
			"default": "./dist/lib/doc-cache.js"
		},
		"./handlers": {
			"types": "./dist/lib/handlers.d.ts",
			"default": "./dist/lib/handlers.js"
		}
	},
	"bin": {
		"lovely-docs-mcp": "dist/index.js"
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "tsc",
		"git-sync": "bun run src/index.ts --git-sync-only",
		"prepublishOnly": "bun run build",
		"release": "bun publish",
		"serve": "bun run dist/index.js --transport http",
		"dev": "LOVELY_DOCS_DEV=1 bun --watch run src/index.ts  --transport http"
	},
	"keywords": [
		"mcp",
		"mcp-server"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@logtail/node": "^0.5.6",
		"@modelcontextprotocol/sdk": "^1.22.0",
		"cors": "^2.8.5",
		"debug": "^4.4.3",
		"express": "^5.1.0",
		"neverthrow": "^8.2.0",
		"simple-git": "^3.30.0",
		"valibot": "^1.1.0",
		"yaml": "^2.8.1",
		"yargs": "^18.0.0"
	},
	"devDependencies": {
		"@types/debug": "^4.1.12",
		"@types/yaml": "^1.9.7",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.5",
		"@types/node": "^24.10.1",
		"@types/yargs": "^17.0.35",
		"typescript": "^5.9.3"
	}
}
